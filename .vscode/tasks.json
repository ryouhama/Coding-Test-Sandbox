{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create Template Directory",
      "type": "shell",
      "command": "rye",
      "args": [
        "run",
        "python",
        "task/create_directory.py",
        "-p=${input:path}",
        "-n=${input:name}"
      ],
      "problemMatcher": [],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "path",
      "description": "Path:",
      "default": "atcoder/XXX",
      "type": "promptString"
    },
    {
      "id": "name",
      "description": "Name:",
      "default": "X",
      "type": "promptString"
    }
  ]
}
